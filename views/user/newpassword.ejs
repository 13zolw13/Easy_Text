<% layout('layouts/boilerplate') -%>


<div class="row align-items-center d-flex justify-content-center v-100 my-auto">
    <div class="col-6 offset-3 justify-content-center mx-auto">

        <form action="/user/<%=User.id%>/newpassword" method="POST"
            class="validationForm formSize justify-content-center mx-auto" novalidate>
            <div class="mb-3">
                <label for="Login" class="form-label">Old Password</label>
                <input name="oldPassword" type="password" class="form-control" id="oldPassword" required />
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">New Password</label>
                <input name="newPassword1" type="password" class="form-control" id="newPassword" required />
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Type it again</label>
                <input name="newPassword2" type="password" class="form-control" id="newPassword" required />
            </div>
            <div class="my-3 text-center d-grid gap-2 ">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
<script src="/scripts/formValidate.js"></script>